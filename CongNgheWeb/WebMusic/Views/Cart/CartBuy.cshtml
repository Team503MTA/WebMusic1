@model WebMusic.Models.Pay

@using (Html.BeginForm("CartBuy","Cart",FormMethod.Post , new {}))
{
    @Html.AntiForgeryToken()

    <div class="col-sm-12" id="content-wrap">
        <div class="col-sm-6 col-sm-offset-4" id="CommitBuy" style="display: none;">

            @Html.EditorFor(model => model.email, new { htmlAttributes = new { type = "text", placeholder = "Email",name = "pay-cart-email", @class = "form-element", @id = "cart-pay-email" } })
            @Html.EditorFor(model => model.password, new
       {
           htmlAttributes = new { type = "password", placeholder = "Password", name = "pay-cart-password", @class = "form-element", @id = "cart-pay-password" }
       })
            @Html.EditorFor(model => model.cardNumber, new { htmlAttributes = new { type = "text", name = "pay-card-number", placeholder = "Card Number", @class = "form-element", @id = "cart-pay-series" } })
            @Html.EditorFor(model => model.passwordCard, new
       {
           htmlAttributes = new { type = "password", name = "pay-card-password", placeholder = "Card Password", @class = "form-element", @id = "cart-pay-card-pass" }
       })
            <div class="login-form-button-group">
                <input type="submit" id="button-cart-pay" class="button-me" value="Pay">
            </div>
        </div>
    </div>
}

