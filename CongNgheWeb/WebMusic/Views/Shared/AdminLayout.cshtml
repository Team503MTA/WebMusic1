<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">

    <link href="~/Content/CSS_Admin/admin.css" rel="stylesheet" />
    <link href="~/Content/ThemMoi.css" rel="stylesheet" />

    <script src="~/Scripts/Scripts_WebMusic/scripts_layout/jquery-1.12.0.min.js"></script>
    <script src="~/Scripts/Scripts_WebMusic/scripts_layout/bootstrap.min.js"></script>
    <title>Music</title>
</head>


<body>
    <header>
        <nav class="navbar navbar-inverse">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="navbar-header">
                            <a class="navbar-brand header-logo" href="#">
                                <img src="~/Image/img_layout/icon/logo.png" />
                            </a>
                        </div>
                        <div id="navbar" class="collapse navbar-collapse">
                            <ul class="nav navbar-nav pull-left" id="left">
                                <li class="active"><a href="#">Home</a></li>
                                <li><a href="#about">Store</a></li>
                                <li><a href="#contact">Listen</a></li>
                                <li><a href="#contact">Shows</a></li>
                                <li><a href="#contact">Video</a></li>
                                <li><a href="#contact">News</a></li>
                            </ul>
                            <ul class="nav navbar-nav login pull-right" id="right">
                                <li>
                                    <a href="#" id="img-admin">
                                        <img src="~/Image/img_layout/icon/images.png" />
                                    </a>
                                    <a href="#" id="login-button">Login</a>

                                </li>

                            </ul>
                        </div>
                        <!--/.nav-collapse -->
                    </div>
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()
    <div id="login-form">
        <div class="container">
            <div class="row">
                <div class="col-sm-4 col-sm-offset-4">
                    <div class="login-title">
                        <h1>Admin</h1>
                    </div>
                    <form>
                        <input type="text" placeholder="Username" class="form-element" id="username-form">
                        <input type="password" placeholder="Password" class="form-element" id="password-form">
                        <div class="remember-user">
                            <input type="checkbox" id="remember-me" value="Forget password">
                            <label for="remember-me">Remember me</label>
                        </div>

                        <div class="login-form-button-group">
                            <input type="button" id="button-me-login" class="button-me" value="Login">
                            <input type="button" id="button-me-cancel" class="button-me" value="Cancel">
                        </div>

                        <p id="fogotten-password"><a href="#">Fogotten Password</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="extra"></div>

    <script src="~/Scripts/Scripts_Admin/admin.js"></script>
</body>

</html>



