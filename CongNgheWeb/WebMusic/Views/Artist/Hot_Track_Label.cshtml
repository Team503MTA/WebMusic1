

@using WebMusic.Models
@model List<TRACK>


@{
    int count = 0;
    List<List<List<string>>> Info = ViewBag.Info;
    int loop = 0;
    if (Info.Count > 0)
    {
        loop = Info.Count / 5;
        if (Info.Count % 5 != 0)
        {
            loop++;
        }
    }

    double widthButton = 100;
    if (loop > 1)
    {
        widthButton = loop * 0.5;
        widthButton -= 0.5;
        widthButton = 100 - widthButton;
        widthButton /= loop;
    }

    var rightWidth = widthButton + "%";

}

<style>
    .detail-artist-trackLabel-slider-button{
        width: @rightWidth;
    }
</style>


