    <script type="text/javascript">
        function clickBuy_fun(id, type) {
            document.getElementById("loadProgress").classList.remove('endLoad');
            document.getElementById("loadProgress").className += 'loadingProgress';
            $.ajax({
                url: '@Url.Action("Add", "Cart")',
                dataType: 'json',
                type: 'POST',
                data: JSON.stringify({
                    id: id,
                    type: type
                }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data !== "") {
                        $.each(data, function (i, item) {
                            if (i === 0) {
                                $("#total_Debt_Menu").text('$' + item);
                                $(this).prop("disabled", true);
                            } else {
                                $("#saleUser_Menu").text('Sale ' + item + '%');
                            }
                        });
                        noti_Fun("Add Successful", "success");
                    } else {
                        noti_Fun("Product Exist In Your Cart Or Playlist", "error");
                    }
                    document.getElementById("loadProgress").classList.remove('loadingProgress');
                    document.getElementById("loadProgress").className += 'endLoad';
                }
            });
        }

        function DetailCart_fun() {
            startLoad();
            $.ajax({
                url: '@Url.Action("CartDetail","Cart")',
                dataType: 'json',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data !== '') {
                        document.getElementById("MainContent").innerHTML = '';
                        document.getElementById("MainContent").innerHTML = data;
                    } else {
                        alert("unsuccess");
                    }
                    endLoad();
                }
            });
        }

        function CommitPay() {
            startLoad();
            $.ajax({
                url: '@Url.Action("CartBuy","Cart")',
                dataType: 'json',
                type: 'POST',
                data: JSON.stringify({
                    email: $("#cart-pay-email").val(),
                    password: $("#cart-pay-password").val(),
                    cardNumber: $("#cart-pay-series").val(),
                    passwordCard: $("#cart-pay-pass").val()
                }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data === '1') {
                        $("#total_Debt_Menu").text('$0');
                        noti_Fun("Buy Successful", "success");
                    } else {
                        noti_Fun("Input Value Fail", "error");
                    }
                    endLoad();
                }
            });
        }

        function cartDelete_fun(id, type, count) {
            $.ajax({
                url: '@Url.Action("CartDelete","Cart")',
                dataType: 'json',
                type: 'POST',
                data: JSON.stringify({
                    id: id,
                    type: type
                }),
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    if (data.totalMoney !== '') {

                        $("#total_Debt_Menu").text('$' + data.totalMoney);
                        $("#TotalMoney").text('$' + data.totalMoney);
                        $("#saleUser_Menu").text('Sale ' + data.sale + '%');

                        $(".row").each(function () {
                            if ($(this).attr("count") === count.toString()) {
                                $(this).hide();
                            }
                        });

                    } else {
                        alert("unsuccess");
                    }
                }
            });
        }

    </script>

