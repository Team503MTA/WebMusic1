                dataType: 'json',
                type: 'POST',
                data: JSON.stringify({
                    email: _email,
                    password: _password
                }),
                contentType: 'application/json; charset=utf-8',
                success: function(data) {
                    if (data !== '') {
                        $("#login-form").hide();
                        $(".extra").hide();
                        $("#login-button").hide();
                        $("#register-button").hide();
                        $("#userName_Menu").text(data);
