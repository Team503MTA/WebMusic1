        $(document).ready(function () {
            var temp = "";
            temp = (document.getElementById("input-form-search").getBoundingClientRect().top + document.getElementById("input-form-search").offsetHeight).toString();
            document.getElementById("show-search").style.top = temp + 'px';
            temp = document.getElementById("input-form-search-child").getBoundingClientRect().left.toString();
            document.getElementById("show-search").style.left = temp + 'px';
            $("#main-search-input").keyup(function () {
